<form action="/addDegreeForm" method="post">
    <h3>Add Degree</h3>
    <!-- <div class="form-group"> -->
    <div class="row">
        <div class="col">
            <label for="">Name</label>
            <input class="form-control" type="text" name="degreeName" placeholder="Full Name">
        </div>
        <div class="col">
            <label for="">Degree Level</label>
            <select class="form-control form-control-sm" name="degreeLevel" id="">
                <option value="none" selected disabled hidden>Select an Option</option>
                <option value="Bachelors">Bachelors</option>
                <option value="Masters">Masters</option>
                <option value="PhD">PhD</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for="">Duration</label>
            <input type="number" class="form-control" name="degreeDuration" placeholder="Duration in Years">
        </div>
        <div class="col">
            <label for="">Fee</label>
            <input type="number" name="degreeFee" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for="">University</label>
            <select class="form-control form-control-sm" name="uni_id" id="">
                <option value="none" selected disabled hidden>Select an Option</option>
                <% for(var i=0; i<universities.length;i++){ %>
                    <option value="<%= universities[i].id %>">
                        <%= universities[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
    </div>

    <button type="submit" >
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        Add
    </button>
    <!-- </div> -->

</form>


    </div>