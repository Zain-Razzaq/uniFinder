<%- include('header') %>
    <link rel="stylesheet" href="css/mainForm.css">


    <!-- #################################   Main Form  #################################  -->

    <h1>Admin Page</h1>
    <div class="container">


        <form action="/addUniForm" method="post">
            <h3>Add University</h3>
            <!-- <div class="form-group"> -->
            <div class="row">
                <div class="col">
                    <label for="">Name</label>
                    <input name="uniName" class="form-control" type="text" placeholder="Full Name of University">
                </div>
                <div class="col">
                    <label for="">Offical Website</label>
                    <input name="uniWebsite" class="form-control" type="text" placeholder="Enter full url">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="">Times Ranking</label>
                    <input name="uniTimesRanking" class="form-control" type="text" placeholder="">
                </div>
                <div class="col">
                    <label for="">World University Ranking</label>
                    <input name="uniWorldRanking" class="form-control" type="text" placeholder="">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="">HEC University Ranking</label>
                    <input name="uniHecRanking" class="form-control" type="text" placeholder="">
                </div>
                <div class="col">
                    <label for="">University Type</label>
                    <select class="form-control form-control-sm" name="uniType" id="">
                        <option value="none" selected disabled hidden>Select an Option</option>
                        <option value="Medical">Medical</option>
                        <option value="Engineering">Engineering</option>
                        <option value="Business">Business</option>
                        <option value="General">General</option>
                        <option value="Law">Law</option>
                        <option value="IT">IT</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="">Sector</label>
                    <select class="form-control form-control-sm" name="uniSector" id="">
                        <option value="none" selected disabled hidden>Select an Option</option>
                        <option value="Public">Public</option>
                        <option value="Private">Private</option>
                    </select>
                </div>
                <div class="col">
                    <label for="">City</label>
                    <select class="form-control form-control-sm" name="uniCity" id="">
                        <option value="none" selected disabled hidden>Select an Option</option>
                        <option value="Lahore">Lahore</option>
                        <option value="Karachi">Karachi</option>
                        <option value="Islamabad">Islamabad</option>
                    </select>
                </div>
            </div>

            <button type="submit" >
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Add</button>
            <!-- </div> -->

        </form>


